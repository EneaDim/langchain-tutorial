{% extends "base" %}
{% block content %}
<h2>Dataset Profile</h2>
<p>{{ analysis.dataset_summary }}</p>
<table>
  <thead><tr><th>Column</th><th>Type</th><th>Nulls</th><th>Unique</th><th>Stats</th><th>Samples</th></tr></thead>
  <tbody>
  {% for c in analysis.columns %}
    <tr>
      <td>{{ c.name }}</td>
      <td>{{ c.type }}</td>
      <td>{{ c.nulls }}</td>
      <td>{{ c.unique }}</td>
      <td>min={{ c.stats.min }}, max={{ c.stats.max }}, mean={{ c.stats.mean }}, std={{ c.stats.std }}</td>
      <td>{{ c.sample_values }}</td>
    </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}
