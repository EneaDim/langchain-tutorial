# --- Core service settings ---
APP_ENV=dev
APP_HOST=0.0.0.0
APP_PORT=8080
API_RATE_LIMIT_PER_MIN=120

# --- Database (Postgres) ---
DB_HOST=db
DB_PORT=5432
DB_USER=srw
DB_PASSWORD=srwpass
DB_NAME=srw

# --- Redis for Celery ---
REDIS_URL=redis://redis:6379/0

# --- MinIO / S3 (MinIO in compose) ---
S3_ENDPOINT_URL=http://minio:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=srw
S3_SECURE=false
S3_SERVER_SIDE_ENCRYPTION=false

# --- Storage & uploads ---
MAX_UPLOAD_MB=200
MAX_ARCHIVE_RECURSION=3
MAX_ARCHIVE_ENTRIES=1000

# --- Providers & models ---
PROVIDER_DEFAULT=LLAMA_OLLAMA
MODEL_DEFAULT=llama3:8b-instruct
SECONDARY_PROVIDER_DEFAULT=QWEN_OLLAMA
SECONDARY_MODEL_DEFAULT=qwen2:7b-instruct

# Ollama / vLLM / OpenAI endpoints
OLLAMA_BASE_URL=http://ollama:11434
VLLM_ENDPOINT=http://vllm:8000
OPENAI_API_KEY=replace_me_if_used
OPENAI_BASE_URL=

# --- Feature flags ---
FEATURE_OCR=true
FEATURE_STT=true
FEATURE_URL_FETCH=false
FEATURE_DB_DUMPS=false

# --- CORS / security ---
ALLOWED_ORIGINS=*
JWT_PUBLIC_KEY_BASE64=
JWT_AUDIENCE=
OIDC_ISSUER=

# --- Observability ---
PROMETHEUS_MULTIPROC_DIR=/tmp/prom
OTEL_EXPORTER_OTLP_ENDPOINT=
